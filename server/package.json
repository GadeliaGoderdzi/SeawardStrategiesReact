{
  "name": "fullstack-server",
  "version": "1.0.0",
  "description": "Node.js backend server for full stack web application",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "debug": "nodemon --inspect src/app.js",
    "test": "jest --testPathPattern=server",
    "test:watch": "jest --watch --testPathPattern=server",
    "test:coverage": "jest --coverage --testPathPattern=server",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "prettier": "prettier --write src",
    "prettier:check": "prettier --check src",
    "migration:up": "migrate-mongo up",
    "migration:down": "migrate-mongo down",
    "seed": "node scripts/seed.js",
    "docs": "jsdoc -c jsdoc.conf.json"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "api",
    "backend",
    "rest"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.0",
    "compression": "^1.7.0",
    "cors": "^2.8.0",
    "dotenv": "^16.1.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "google-auth-library": "^9.4.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.0",
    "moment": "^2.29.0",
    "mongoose": "^7.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.0",
    "nodemailer": "^6.9.0",
    "sharp": "^0.32.0",
    "stripe": "^12.9.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.0",
    "migrate-mongo": "^10.0.0",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.8.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "../coverage/server"
  }
}
